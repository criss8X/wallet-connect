---
interface Props {
  title: string;
  items: {
    name: string;
    href: string;
  }[];
}

const { title, items } = Astro.props;
---

<article class="pt-4 flex flex-col gap-1">
  <h2 class="px-4 opacity-60 text-sm">{title}</h2>

  <nav class="flex flex-col">
    {
      items.map(({ name, href }) => (
        <a
          href={href}
          class="px-6 h-12 text-md flex items-center select-none hover:bg-neutral-900"
        >
          {name}
        </a>
      ))
    }
  </nav>
</article>
