---
import "../styles/global.css";
import NavSection from "@/components/nav-section.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
  </head>

  <body class="flex min-h-screen bg-neutral-950">
    <aside class="w-60 xl:w-72 flex flex-col border-r border-neutral-900">
      <header
        class="flex-1 px-4 flex items-center border-b border-b-neutral-900"
      >
        <h1 class="text-xl py-2 xl:py-0 font-bold leading-[100%]">
          Wallet Connect <sub class="text-xs opacity-55">v1.0.0</sub>
        </h1>
      </header>

      <div class="flex flex-col gap-2 flex-15">
        <NavSection
          title="INSTALLATION"
          items={[{ name: "Getting Started", href: "/getting-started" }]}
        />

        <NavSection
          title="COMPONENTS"
          items={[
            { name: "WalletConnect", href: "/ui/wallet-connect" },
            { name: "ChainSelector", href: "/ui/chain-selector" },
          ]}
        />
      </div>

      <footer class="flex-1 border-t border-neutral-900"></footer>
    </aside>

    <main class="flex-5">
      <slot />
    </main>
  </body>
</html>
