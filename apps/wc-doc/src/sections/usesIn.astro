---
import Script from "@/components/script.astro";

interface Props {
  className?: string;
}

const { className } = Astro.props;

const shadcnReqComponents = ["Avatar", "Alert Dialog", "Button", "Sonner"].map(
  (name) => ({
    name: name,
    url: `https://ui.shadcn.com/docs/components/${name.toLowerCase().replaceAll(" ", "-")}`,
  }),
);
---

<div class={className}>
  <h1 class="text-2xl">Que utilizamos aquí?</h1>

  <ol class="flex flex-col gap-4 [&_li]:pl-2 [&_li]:before:content-['•']">
    <h2 class="text-xl font-medium">Librerías Web3</h2>

    <li>
      Wagmi (React) <br />
      <a
        href="https://wagmi.sh/react/installation"
        class="hover:underline text-blue-500"
      >
        https://wagmi.sh/react/installation
      </a>
    </li>

    <h2 class="text-xl font-medium">Librería de Componentes</h2>

    <li>
      Shadcn <br />
      <a
        class="text-blue-500 hover:underline w-max"
        href="https://ui.shadcn.com/docs/installation"
        target="_blank"
      >
        https://ui.shadcn.com/docs/installation
      </a>
    </li>

    <h2 class="text-xl font-medium">Shadcn Components</h2>

    {
      shadcnReqComponents.map(({ name, url }) => (
        <li>
          {name} <br />
          <a class="text-blue-500 hover:underline" href={url} target="_blank">
            {url}
          </a>
        </li>
      ))
    }
  </ol>
</div>
