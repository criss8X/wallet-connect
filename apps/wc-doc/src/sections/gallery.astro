---
import connectWalletBtnImg from "public/screenshots/wc-btn.webp";
import galleryContent from "@/assets/content/gallery.json";
import { getLocalesByLang } from "@/lib/locale";

const { title, connectWalletBtnImgDesc } = getLocalesByLang(
  galleryContent,
  Astro.currentLocale,
);
---

<div class="space-y-4">
  <h1 class="text-2xl">{title}</h1>

  <div
    class="w-md h-max pt-2 py-1 px-2 rounded-md border border-neutral-500/30 bg-neutral-900/20"
  >
    <img width="420" loading="lazy" src={connectWalletBtnImg.src} />

    <span class="opacity-80 text-sm">{connectWalletBtnImgDesc}</span>
  </div>
</div>
